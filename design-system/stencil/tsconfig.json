{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "jsx": "react",
    "jsxFactory": "h",
    "typeRoots": [
      "../../node_modules/@types",
      "../../types"
    ]
  },
  "include": [
    "src",
    "types/jsx.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
